---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "@assets/marcela-rogante-xfPpB7Pe8NA-unsplash.jpg";

import { getCollection } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout>
  <section class="mb-8">
    <h1 class="mb-6 text-6xl font-black">Broken retail workers wanted!</h1>
    <div>
      <Image
        class="rounded-lg"
        src={heroImage}
        alt="Panales storefront during daytime"
        loading="eager"
      />
    </div>
  </section>
  <section class="mb-8">
    <h2 class="mb-4 text-4xl font-bold">Unleash your inner rage</h2>
    <div class="my-4 flex w-full gap-2">
      <Image class="w-1/2 rounded-lg" src={heroImage} alt="" loading="eager" />
      <Image class="w-1/2 rounded-lg" src={heroImage} alt="" loading="eager" />
    </div>
    <p>
      Lorem, ipsum dolor sit amet consectetur adipisicing elit. Recusandae
      maxime, minus laborum non quod maiores aperiam a, repellendus vel nemo,
      perferendis impedit aliquid modi qui quas accusantium adipisci distinctio
      laudantium.
    </p>
  </section>
  <section>
    <h2 class="mb-4 text-4xl font-bold">See what we're working on</h2>
    <div class="grid grid-cols-2 gap-2">
      {
        posts.map((post) => (
          <div>
            <a href={`/blog/${post.slug}/`}>
              <Image
                class="rounded-lg"
                src={post.data.heroImage.url}
                alt={post.data.description}
              />
              <div class="flex flex-col">
                <h4 class="text-2xl font-semibold">{post.data.title}</h4>
                <p class="text-gray-500">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </div>
            </a>
          </div>
        ))
      }
      <div></div>
    </div>
  </section></Layout
>
